{
    "name": "setukpa-backend",
    "version": "1.0.0",
    "description": "Backend API untuk Sistem Manajemen Makalah Digital SETUKPA",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "npx prisma generate && tsc",
        "start": "node dist/server.js",
        "start:prod": "pm2 start ecosystem.config.cjs --env production",
        "stop:prod": "pm2 stop setukpa-api",
        "restart:prod": "pm2 reload ecosystem.config.cjs --env production",
        "logs:prod": "pm2 logs setukpa-api",
        "status:prod": "pm2 status",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:seed": "tsx prisma/seed.ts",
        "prisma:studio": "prisma studio",
        "db:setup": "prisma migrate dev && prisma db seed"
    },
    "keywords": [
        "setukpa",
        "makalah",
        "api"
    ],
    "author": "SETUKPA",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.90.1",
        "@types/pdfkit": "^0.17.4",
        "@types/pg": "^8.15.6",
        "axios": "^1.13.2",
        "bcryptjs": "^2.4.3",
        "cheerio": "^1.1.2",
        "cors": "^2.8.5",
        "csv-parse": "^6.1.0",
        "docx": "^9.5.1",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.2.0",
        "helmet": "^8.1.0",
        "html-pdf-node": "^1.0.8",
        "ioredis": "^5.9.0",
        "jsonwebtoken": "^9.0.2",
        "mammoth": "^1.11.0",
        "multer": "^1.4.5-lts.1",
        "pdf-parse": "^1.1.1",
        "pdfkit": "^0.17.2",
        "pg": "^8.16.3",
        "sanitize-html": "^2.17.0",
        "string-similarity": "^4.0.4",
        "uuid": "^13.0.0",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@prisma/client": "^5.20.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cheerio": "^0.22.35",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.19.3",
        "@types/pdf-parse": "^1.1.5",
        "@types/sanitize-html": "^2.16.0",
        "@types/string-similarity": "^4.0.2",
        "@types/uuid": "^10.0.0",
        "dotenv-cli": "^11.0.0",
        "prisma": "^5.20.0",
        "tsx": "^4.19.2",
        "typescript": "^5.8.2"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    }
}
